<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MainBtn">
        <attr name="btnText" format="string" />
        <attr name="btnState" format="enum">
            <enum name="loading" value="1" />
            <enum name="noLoading" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="movieWorldEditText">
        <attr name="boxError" format="string"/>
        <attr name="boxLabel" format="string"/>
        <attr name="boxImage" format="reference"/>
        <attr name="setInputType" format="integer"/>
        <attr name="boxDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoadingImage">
        <attr name="isLoading" format="boolean"/>
        <attr name="enableLoading" format="boolean"/>
        <attr name="imageRadius" format="integer"/>
        <attr name="loadingAnimation" format="reference"/>
        <attr name="initialState" format="enum">
            <enum name="loading" value="1"/>
            <enum name="notLoading" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomSearchView">
        <attr name="boxSearchIcon" format="reference"/>
        <attr name="boxClearIcon" format="reference"/>
        <attr name="boxPadding" format="integer"/>
        <attr name="boxTextColor" format="color"/>
        <attr name="boxTextSize" format="integer"/>
        <attr name="boxFontFamily" format="reference"/>
        <attr name="boxHint" format="string"/>
        <attr name="boxBackground" format="color"/>
        <attr name="boxHeight" format="integer"/>
        <attr name="boxPaddingRight" format="integer"/>
        <attr name="boxPaddingLeft" format="integer"/>
        <attr name="boxPaddingTop" format="integer"/>
        <attr name="boxPaddingBottom" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EmptyStateView">
        <attr name="animation" format="reference"/>
        <attr name="emptyViewText" format="string"/>
    </declare-styleable>
</resources>